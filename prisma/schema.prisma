// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                  Int                 @id @default(autoincrement())
  uuid                String              @unique @default(uuid())
  email               String?             @unique
  phone               String?             @unique
  created_at          DateTime            @default(now())
  updated_at          DateTime            @updatedAt
  role                AuthRole            @default(user)
  ref_code                 String?             @default("")
  identities          Identity[]
  verification_tokens VerificationToken[]
  media_subscriptions MediaSubscription[]
  notification_channels NotificationChannel[]
  tracked_items TrackedItem[]
  user_alerts UserAlert[]

  @@index([email])
  @@index([phone])
  @@index([uuid])
  @@map("users")
}

model Identity {
  id                  Int                 @id @default(autoincrement())
  uuid                String              @unique @default(uuid())
  user_uuid           String
  provider            AuthProviderType
  provider_id         String?
  access_token        String?
  refresh_token       String?
  password            String?
  expires_at          Int?
  verified            Boolean             @default(false)
  user                User                @relation(fields: [user_uuid], references: [uuid], onDelete: Cascade)
  created_at          DateTime            @default(now())
  updated_at          DateTime            @updatedAt

  @@unique([provider, provider_id], name: "unique_identity")
  @@index([provider_id])
  @@index([user_uuid])
  @@map("identities")
}

model VerificationToken {
  id            Int          @id @default(autoincrement())
  uuid          String       @unique @default(uuid())
  user_uuid     String?
  token         String
  state         String?
  type          AuthProviderType
  client_identifier String?
  expires_at    DateTime?
  created_at    DateTime     @default(now())
  updated_at    DateTime     @updatedAt
  user          User?        @relation(fields: [user_uuid], references: [uuid], onDelete: Cascade)

  @@index([token])
  @@index([user_uuid])
  @@map("verification_tokens")
}

model MediaSubscription {
  id                    Int          @id @default(autoincrement())
  uuid                  String       @unique @default(uuid())
  user_uuid             String
  platform_type         PlatformType
  account_identifier    String
  enabled Boolean      @default(true)
  meta Json?
  created_at            DateTime     @default(now())
  updated_at            DateTime     @updatedAt
  user                  User         @relation(fields: [user_uuid], references: [uuid], onDelete: Cascade)

  @@unique([user_uuid, platform_type, account_identifier], name: "unique_user_subscription")
  @@index([user_uuid])
  @@index([platform_type])
  @@index([account_identifier])
  @@map("media_subscriptions")
}

model TrackedItem {
  id                Int          @id @default(autoincrement())
  uuid              String       @unique @default(uuid())
  user_uuid         String
  item_type         TrackedItemType
  item_identifier   String
  enabled           Boolean      @default(true)
  meta              Json?
  created_at        DateTime     @default(now())
  updated_at        DateTime     @updatedAt
  user              User         @relation(fields: [user_uuid], references: [uuid], onDelete: Cascade)

  @@unique([user_uuid, item_type, item_identifier], name: "unique_user_tracked_item")
  @@index([user_uuid])
  @@index([item_type])
  @@index([item_identifier])
  @@map("tracked_items")
}


model NotificationChannel {
  id Int @id @default(autoincrement())
  uuid String @unique @default(uuid())
  user_uuid String
  channel NotificationChannelType
  client_identifier String?
  web_push_config Json?
  verified Boolean @default(false)
  enabled Boolean @default(true)
  meta Json?
  created_at DateTime @default(now()) @map("created_at")
  user User @relation(fields: [user_uuid], references: [uuid], onDelete: Cascade)

  @@unique([user_uuid, channel], name: "unique_user_channel")
  @@index([user_uuid])
  @@index([channel])
  @@map("notification_channels")
}

model Alert {
  id Int @id @default(autoincrement())
  uuid String @unique @default(uuid())
  batch_id String
  title String
  description String
  tickers Json
  sentiment String
  severity String
  popularity Int
  post_ids String[]
  platform_type PlatformType
  account_identifier String
  account_name String
  screen_name String @default("")
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  user_alerts UserAlert[]

  @@index([platform_type])
  @@index([account_identifier])
  @@map("alerts")
}

model UserAlert {
  id Int @id @default(autoincrement())
  uuid String @unique @default(uuid())
  user_uuid String
  alert_id Int
  notification_channels NotificationChannelType[]
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  alert Alert @relation(fields: [alert_id], references: [id], onDelete: Cascade)
  user User @relation(fields: [user_uuid], references: [uuid], onDelete: Cascade)

  @@index([user_uuid])
  @@map("user_alerts")
}



enum AuthProviderType {
  email
  phone
  sms
  google
  facebook
  twitter
  telegram
}

enum AuthRole {
  admin
  user
  support
  super_admin
}

enum PlatformType {
  twitter
  youtube
  reddit
  news
}

enum NotificationChannelType {
  email
  phone
  sms
  push
  web
  telegram
  whatsapp
  slack
  discord
}

enum TrackedItemType {
  stock
  crypto
  commodity
  keyword
}